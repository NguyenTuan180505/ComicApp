<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Vòng tròn viền + nền xám nhạt -->
    <item>
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp"/>
            <solid android:color="#F5F5F5"/>
            <stroke android:width="1.5dp" android:color="#666666"/>
        </shape>
    </item>

    <!-- Đầu người (hình oval) -->
    <item android:top="5dp" android:left="8dp" android:right="8dp" android:bottom="12dp">
        <shape android:shape="oval">
            <solid android:color="#666666"/>
        </shape>
    </item>

    <!-- Thân người (hình chữ nhật bo tròn dưới) -->
    <item android:top="13dp" android:left="4dp" android:right="4dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#666666"/>
            <corners
                android:bottomLeftRadius="12dp"
                android:bottomRightRadius="12dp"
                android:topLeftRadius="12dp"
                android:topRightRadius="12dp"/>
        </shape>
    </item>

</layer-list>