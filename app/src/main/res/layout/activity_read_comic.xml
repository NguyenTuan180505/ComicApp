<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingTop="32dp">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/vqv_header_border"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/vqv_vt_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tên truyện: Võ Lâm Ký"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/vqv_vt_menu" />
    </LinearLayout>

    <!-- HIỂN THỊ CHƯƠNG -->
    <TextView
        android:id="@+id/tvChapterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Chương 5: Cuộc chiến bắt đầu"
        android:textColor="#673AB7"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <!-- NỘI DUNG TRUYỆN -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung chương truyện hiển thị tại đây..."
            android:textColor="@android:color/black"
            android:textSize="15sp" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- Nút lùi -->
        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/vqv_vt_lui"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter" />

        <!-- Nút chọn nhạc -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMusic"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="52dp"
            android:layout_marginHorizontal="12dp"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            app:icon="@drawable/vqv_vt_music_choice"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:cornerRadius="26dp"
            android:backgroundTint="#7E57C2" />

        <!-- NÚT THẢ CẢM XÚC SIÊU ĐẸP ĐỎ LỬA -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reaction"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:minWidth="140dp"
            android:text="Thả cảm xúc"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#E74C3C"
            app:icon="@drawable/ic_heart_default"
            app:iconTint="#E74C3C"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:strokeColor="#E74C3C"
            app:strokeWidth="2dp"
            app:cornerRadius="28dp"
            android:backgroundTint="#FFFFFF" />

        <!-- Nút tới -->
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/vqv_vt_toi"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter" />
    </LinearLayout>
</LinearLayout>
