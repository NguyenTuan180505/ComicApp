<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <!-- ScrollView chiếm toàn bộ trừ BottomNav -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- Avatar + Tên + Edit -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_person_24"
                app:civ_border_width="3dp"
                app:civ_border_color="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="28dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name User"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/imgAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imgEditName"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit_24"
                app:tint="#888888"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/tvName"
                app:layout_constraintBottom_toBottomOf="@id/tvName"
                app:layout_constraintStart_toEndOf="@id/tvName" />

            <!-- Thanh Level -->
            <LinearLayout
                android:id="@+id/layoutLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 1"
                    android:textSize="14sp"
                    android:textColor="#888888" />

                <ProgressBar
                    android:id="@+id/progressLevel"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="12dp"
                    android:progress="70"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_level" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="700/1000"
                    android:textSize="14sp"
                    android:textColor="#888888" />
            </LinearLayout>

            <!-- Thẻ VIP -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardVip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFF5F5"
                app:layout_constraintTop_toBottomOf="@id/layoutLevel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_vip_crown" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mở thẻ VIP"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#D32F2F" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thoả sức đam mê"
                            android:textSize="13sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnBuyVip"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Mua VIP"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#D32F2F"
                        style="?android:attr/borderlessButtonStyle"
                        app:cornerRadius="18dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Danh sách menu chính -->
            <LinearLayout
                android:id="@+id/menuContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/cardVip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 1. Danh sách theo dõi -->
                <LinearLayout
                    android:id="@+id/item_follow_list"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_menu_item"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_list"
                        android:layout_marginStart="16dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Danh sách theo dõi"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginStart="20dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#BBBBBB"
                        android:layout_marginEnd="16dp" />
                </LinearLayout>

                <!-- 2. Nạp xu -->
                <LinearLayout
                    android:id="@+id/item_nap_xu"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_menu_item"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_coin"
                        android:layout_marginStart="16dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nạp xu"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginStart="20dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#BBBBBB"
                        android:layout_marginEnd="16dp" />
                </LinearLayout>

                <!-- 3. Lịch sử giao dịch -->
                <LinearLayout
                    android:id="@+id/item_lich_su"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_menu_item"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_history"
                        android:layout_marginStart="16dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lịch sử giao dịch"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginStart="20dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#BBBBBB"
                        android:layout_marginEnd="16dp" />
                </LinearLayout>

                <!-- 4. Đổi mật khẩu -->
                <LinearLayout
                    android:id="@+id/item_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_menu_item"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock"
                        android:layout_marginStart="16dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đổi mật khẩu"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginStart="20dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#BBBBBB"
                        android:layout_marginEnd="16dp" />
                </LinearLayout>

                <!-- 5. Cập nhật thông tin -->
                <LinearLayout
                    android:id="@+id/item_update_info"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_menu_item"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginStart="16dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cập nhật thông tin"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginStart="20dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#BBBBBB"
                        android:layout_marginEnd="16dp" />
                </LinearLayout>

                <!-- 6. Đăng xuất -->
                <LinearLayout
                    android:id="@+id/item_logout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_menu_item"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_logout"
                        android:layout_marginStart="16dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đăng xuất"
                        android:textSize="15sp"
                        android:textColor="#D32F2F"
                        android:layout_marginStart="20dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Phần dưới cùng: Liên hệ, Đánh giá, Chia sẻ (ĐÃ FIX LỖI HOÀN TOÀN) -->
            <LinearLayout
                android:id="@+id/footerMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/menuContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_contact_admin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Liên hệ admin"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:background="@drawable/bg_menu_item"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_rate_app"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:text="Đánh giá ứng dụng"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:background="@drawable/bg_menu_item"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_share_app"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:text="Chia sẻ ứng dụng"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:background="@drawable/bg_menu_item"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>