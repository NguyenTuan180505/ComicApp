<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk-res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    android:outlineAmbientShadowColor="#8D4FFF"
    android:outlineSpotShadowColor="#8D4FFF">

    <!-- Gradient nền + viền neon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/prediction_gradient_bg">

        <!-- Header với icon lấp lánh -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DỰ ĐOÁN CHAP SAU"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ✨"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Câu hỏi -->
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nam chính sẽ chọn ai để cứu trong chap tới?"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"/>

        <!-- 4 đáp án – đẹp như app xịn -->
        <GridLayout
            android:id="@+id/grid_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="16dp"
            android:useDefaultMargins="true" />

        <!-- Thanh % realtime siêu đẹp -->
        <LinearLayout
            android:id="@+id/layout_progress"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:background="#33FFFFFF"
            android:elevation="4dp"
            android:backgroundTint="#40FFFFFF"
            android:clipToOutline="true"
            android:outlineAmbientShadowColor="#000000"
            android:outlineSpotShadowColor="#000000" />

        <!-- Kết quả người dùng chọn -->
        <LinearLayout
            android:id="@+id/layout_user_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#1A000000"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp">

            <TextView
                android:id="@+id/tv_user_choice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Bạn đã chọn: B. Bạch Liên hoa"
                android:textColor="#FFD700"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hạng #7"
                android:textColor="#FFFFFF"
                android:background="#FF2D92"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textStyle="bold"
                android:textSize="15sp"
                app:cardCornerRadius="20dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>