<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Nội dung cuộn -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Avatar + Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="73dp"
                    android:layout_height="69dp"
                    android:background="@drawable/avatar_bg"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_24" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvName"
                        android:text="Name"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:text="Level 1"
                            android:textColor="#39AC5B"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvExp"
                            android:text=" 700/1000"
                            android:textSize="13sp"
                            android:textColor="#39AC5B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressLevel"
                        android:layout_width="160dp"
                        android:layout_height="5dp"
                        android:progress="70"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressTint="#EB5757"
                        android:max="100"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Banner VIP -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/banner_vip_bg"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginTop="14dp">

                <ImageView
                    android:src="@drawable/ic_vip"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Mở thẻ VIP"
                        android:textStyle="bold"
                        android:textColor="#E74C3C"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Thoả sức đam mê"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:text="Mua VIP"
                    android:textStyle="bold"
                    android:textColor="#E53935"
                    android:padding="6dp"
                    android:background="@drawable/vip_button_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Menu list -->
            <LinearLayout
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:padding="12dp">

                <TextView android:text="Danh sách theo dõi" style="@style/menuItemStyle" />
                <TextView android:text="Nạp xu" style="@style/menuItemStyle" />
                <TextView android:text="Lịch sử giao dịch" style="@style/menuItemStyle" />
                <TextView android:text="Đổi mật khẩu" style="@style/menuItemStyle" />
                <TextView android:id="@+id/tv_update_info" android:text="Cập nhật thông tin" style="@style/menuItemStyle" />
                <TextView android:text="Đăng xuất" style="@style/menuItemStyle" />
            </LinearLayout>

            <!-- Menu phụ -->
            <LinearLayout
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:padding="12dp">

                <TextView android:text="Liên hệ admin" style="@style/menuItemStyle" />
                <TextView android:text="Đánh giá ứng dụng" style="@style/menuItemStyle" />
                <TextView android:text="Chia sẻ ứng dụng" style="@style/menuItemStyle" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Thanh điều hướng dưới cùng -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trang chủ -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textSize="11sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Nhiệm vụ -->
        <LinearLayout
            android:id="@+id/nav_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_task"
                app:tint="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhiệm vụ"
                android:textSize="11sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Yêu thích -->
        <LinearLayout
            android:id="@+id/nav_favourite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favourite"
                app:tint="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yêu thích"
                android:textSize="11sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Tài khoản -->
        <LinearLayout
            android:id="@+id/nav_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_account"
                app:tint="#4CAF50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản"
                android:textSize="11sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>